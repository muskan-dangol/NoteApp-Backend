{
  "compilerOptions": {
    "target": "ES6",
    "outDir": "./build/",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,     
  },
  "exclude": ["node_modules"],
}